<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.DatePicker?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotel.userinterface.BoekingenInvoerenController">
    <children>
        <Label layoutX="14.0" layoutY="20.0" text="Nieuwe Boeking">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <!-- Add necessary components for booking input -->
        <DatePicker fx:id="aankomstDatePicker" promptText="Aankomst Datum"/>
        <DatePicker fx:id="vertrekDatePicker" promptText="Vertrek Datum"/>

        <DatePicker fx:id="datePicker" promptText="Boekings Datum"/>
        <TextField fx:id="guestNameTextField" promptText="Guest Name"/>

        <Button layoutX="150.0" layoutY="282.0" mnemonicParsing="false" onAction="#submitBooking" text="Boek" />
    </children>
</AnchorPane>
